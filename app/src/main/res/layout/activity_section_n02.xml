            <!-- can10  Input-Numeric   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVcan10"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_can10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_can10"
                            android:text="@string/can10" />

                        <TextView
                            android:id="@+id/q_can10"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_can10"
                            android:layout_alignBottom="@id/qtxt_can10"
                            android:text="@string/Q_can10" />

                    </RelativeLayout>

                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/can10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="###.#"
                        android:inputType="number"
                        android:maxLength="3"
                        app:mask="###.#"
                        app:maxValue="180"
                        app:minValue="40"
                        app:pattern="^(\\d{3,3}\\.\\d{1,1})$"
                        app:type="range" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


