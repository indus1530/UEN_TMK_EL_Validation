<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.uen_tmk_el_validation.ui.sections.SectionN02Activity" />
    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/GrpName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- can6  Input   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVcan6"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_can6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_can6"
                            android:text="@string/can6" />

                        <TextView
                            android:id="@+id/q_can6"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_can6"
                            android:layout_alignBottom="@id/qtxt_can6"
                            android:text="@string/Q_can6" />

                    </RelativeLayout>

                    <EditText
                        android:id="@+id/can6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:hint="@string/can6"
                        android:inputType="textPersonName"
                        android:maxLength="30" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- can7  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVcan7"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_can7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_can7"
                            android:text="@string/can7" />

                        <TextView
                            android:id="@+id/q_can7"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_can7"
                            android:layout_alignBottom="@id/qtxt_can7"
                            android:text="@string/Q_can7" />
                    </RelativeLayout>

                    <RadioGroup
                        android:id="@+id/can7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/can701"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/can701" />

                        <RadioButton
                            android:id="@+id/can702"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/can702" />

                        <RadioButton
                            android:id="@+id/can703"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/can703" />

                    </RadioGroup>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


