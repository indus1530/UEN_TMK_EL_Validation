                        <TextView
                            style="@style/sub"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/can_tittle_1a" />

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


