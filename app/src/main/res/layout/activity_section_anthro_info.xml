<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.uen_tmk_el_validation.ui.sections.SectionAnthroInfoActivity" />
    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/GrpName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- elb_title1  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVelb_title1"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/sub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/elb_title1" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- elb_title2  Title   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVelb_title2"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/sub"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/elb_title2" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- elb1  Input-Numeric   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVelb1"
                style="@style/cardView">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/qtxt_elb1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/q_elb1"
                            android:text="@string/elb1" />

                        <TextView
                            android:id="@+id/q_elb1"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/qtxt_elb1"
                            android:layout_alignBottom="@id/qtxt_elb1"
                            android:text="@string/Q_elb1" />

                    </RelativeLayout>

                    <EditText
                        android:id="@+id/elb1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="10" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <!-- elb4  Input   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVelb4"
